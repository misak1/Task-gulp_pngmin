#-----------------------------------------------------------------
gulp        = require 'gulp'
coffee      = require 'gulp-coffee'
pngmin      = require 'gulp-pngmin'
clean       = require 'gulp-clean'
#-----------------------------------------------------------------

#-----------------------------------------------------------------
# default
#-----------------------------------------------------------------

gulp.task 'default', ['pngmin'], ->

#-----------------------------------------------------------------
# pngmin
#-----------------------------------------------------------------

gulp.task 'pngmin', ->
  gulp.src "./input/*.png"
    .pipe pngmin()
    .pipe gulp.dest("./output_min/")

#-----------------------------------------------------------------
# Clean
#-----------------------------------------------------------------

gulp.task 'clean', ->
    gulp.src './**/.DS_Store', {read:false}
        .pipe clean()
